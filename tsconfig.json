{
	"compilerOptions": {
	  "module": "esnext",
	  "lib": ["dom", "esnext"],
	  "esModuleInterop": true,
	  "strict": true,
	  "strictNullChecks": true,
	  "moduleResolution": "Node",
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	},
	"exclude": [
	  "**/node_modules",
	  "**/dist",
	  "**/__tests__",
	  "**/*.test*",
	  "**/*.spec*"
	],
      }